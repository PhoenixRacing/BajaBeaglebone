#!/usr/bin/env python
import rospy
from std_msgs.msg import String
from flask import Flask

class DashApp(Flask):

	def __init__(self):
		super(self.__class__, self).__init__(__name__)
		self.string = 'hello'
		self.initializeRoutes()

	def initializeRoutes(self):
		@self.route('/')
		def index():
			return self.string

	# define the callback
	def callback(self, data):
		self.string = str(data)
